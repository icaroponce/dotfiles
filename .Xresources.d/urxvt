#define font1   Inconsolata Nerd Font Mono
#define font2   DejaVu Sans

URxvt*termName: rxvt-unicode
URxvt.perl.ext-common: font-size

URxvt.intensityStyles:	   true
URxvt.depth:		   32
URxvt*saveLines:           32767
URxvt*iso14755:            false
URxvt*iso14755_52:         false

URxvt.internalBorder:       2

!URxvt.font:                 xft:monospace:size=11
!URxvt.boldFont:             xft:monospace:size=11
!URxvt.italicFont:           xft:monospace:size=11

URxvt.font:                 xft:font1:pixelsize=23:minspace=False:size=9, xft:font2:pixelsize=15
URxvt.boldFont:             xft:font1:bold:pixelsize=23:minspace=False, xft:font2:pixelsize=15
URxvt.italicFont:           xft:font1:italic:pixelsize=23:minspace=False, xft:font2:pixelsize=15
URxvt.letterSpace: 0

URxvt.scrollBar:	false
!URxvt.cursorColor:	white

!! resize-font
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
;URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-backslash:  font-size:show

URxvt.keysym.C-slash: command:\033]720;1\007
URxvt.keysym.C-equal: command:\033]721;1\007
