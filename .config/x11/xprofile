#!/bin/sh

# Run this file when starting WM.

picom -b &            # for transparency
dunst &               # for notifications
nm-applet &           # for network-applet on status bar
blueman-applet &      # for bluetooth-applet on status bar
xbindkeys --poll-rc & # for biding keys
xfce4-power-manager & # for managing battery
unclutter &           # for removing mouse when idle
telegram-desktop &    # for telegram
#(sleep 15 && xset r rate 300 45) &  # speed xrate up
polybar-launcher &    # start polybar
